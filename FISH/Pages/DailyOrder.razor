@inject NavigationManager NavigationManager
@page "/dailyorder"


<h2>每日拼盤</h2>

<form method="post">
    <div>
        <label for="Detail">詳細資料</label>
        <input type="text" id="Detail" name="Detail" asp-for="DailyOrder.Detail" />
        <span asp-validation-for="DailyOrder.Detail" class="text-danger"></span>
    </div>
    <div>
        <label for="Description">說明</label>
        <input type="text" id="Description" name="Description" asp-for="DailyOrder.Description" />
        <span asp-validation-for="DailyOrder.Description" class="text-danger"></span>
    </div>
    <div>
        <label for="PricingMethod">計價方式</label>
        <input type="text" id="PricingMethod" name="PricingMethod" asp-for="DailyOrder.PricingMethod" />
        <span asp-validation-for="DailyOrder.PricingMethod" class="text-danger"></span>
    </div>
    <div>
        <label for="Region">所屬區域</label>
        <input type="text" id="Region" name="Region" asp-for="DailyOrder.Region" />
        <span asp-validation-for="DailyOrder.Region" class="text-danger"></span>
    </div>
    <div>
        <label for="Quantity">數量</label>
        <input type="text" id="Quantity" name="Quantity" asp-for="DailyOrder.Quantity" />
        <span asp-validation-for="DailyOrder.Quantity" class="text-danger"></span>
    </div>
    <div>
        <label for="DeliveryTime">外送到站時間</label>
        <input type="text" id="DeliveryTime" name="DeliveryTime" asp-for="DailyOrder.DeliveryTime" />
        <span asp-validation-for="DailyOrder.DeliveryTime" class="text-danger"></span>
    </div>
    <div>
        <label for="DeliveryAddress">外送地址</label>
        <input type="text" id="DeliveryAddress" name="DeliveryAddress" asp-for="DailyOrder.DeliveryAddress" />
        <span asp-validation-for="DailyOrder.DeliveryAddress" class="text-danger"></span>
    </div>
    <div>
        <label for="ContactNumber">聯絡電話</label>
        <input type="text" id="ContactNumber" name="ContactNumber" asp-for="DailyOrder.ContactNumber" />
        <span asp-validation-for="DailyOrder.ContactNumber" class="text-danger"></span>
    </div>
    <div>
        <label for="OrderItem">訂購項目</label>
        <input type="text" id="OrderItem" name="OrderItem" asp-for="DailyOrder.OrderItem" />
        <span asp-validation-for="DailyOrder.OrderItem" class="text-danger"></span>
    </div>
    <div>
        <label for="Remarks">備註</label>
        <input type="text" id="Remarks" name="Remarks" asp-for="DailyOrder.Remarks" />
        <span asp-validation-for="DailyOrder.Remarks" class="text-danger"></span>
    </div>
    
    <!-- 驗證碼部分 -->
    <div>
        <label for="Captcha">驗證碼</label>
        <input type="text" id="Captcha" name="Captcha" />
        <img src="@($"{NavigationManager.BaseUri}Captcha/GenerateCaptcha")" alt="Captcha Image" />
        <span asp-validation-for="Captcha" class="text-danger"></span>
    </div>
    
    <button type="submit">提交</button>
</form>

