@using Microsoft.AspNetCore.Components.Rendering


<ImageViewer Url="@aUrl" FitMode="BootstrapBlazor.Components.ObjectFitMode.Cover" />

@code {
    [Parameter]
    public string aUrl { get; set; } = "/asset/img/IMG_0170.jpg";
    public enum ObjectFitMode
    {
        Fill,
        Contain,
        Cover,
        None,
        ScaleDown
    }
    public class ImageViewer : ComponentBase
    {
        

        [Parameter]
        public ObjectFitMode FitMode { get; set; } = ObjectFitMode.Cover;

        protected override void BuildRenderTree(RenderTreeBuilder builder)
        {
            builder.OpenElement(0, "img");
            builder.AddAttribute(1, "src", "/asset/img/IMG_0170.jpg");
            builder.AddAttribute(2, "style", $"object-fit: {FitMode.ToString().ToLower()};");
            builder.CloseElement();
        }
    }
}